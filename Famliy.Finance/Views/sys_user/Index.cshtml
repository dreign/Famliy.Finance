@using Famliy.Finance.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<Famliy.Finance.Models.sys_user>
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well with-header">
            <div class="header bordered-sky">
                用户管理
            </div>
            @using (Html.BeginForm("Index", "sys_user", FormMethod.Get, new { @class = "form-inline" }))
            {
                <p>
                    用户:
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @Style = "display:inline" })
                    <button type="submit" class="btn btn-blue">查询</button>
                    @Html.ActionLink("新增", "Create", "sys_user", new { @class = "btn btn-palegreen" })
                </p>
            }
            <table class="table table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.user_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.user_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.nick_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.family_name)
                    </th>                   
                    <th>    
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.sex)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.birthday)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.post)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.phone)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.qq)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.weixin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GetEnumerator().Current.interest)
                    </th>                  
                                        <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.user_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.user_name)
                        </td>
 <td>
                            @Html.DisplayFor(modelItem => item.nick_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.family_name)
                        </td>                       
                        <td>
                            @Html.ValueFor(modelItem => item.sex, (bool)item.sex ? "男" : "女")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.birthday)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.post)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.qq)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.weixin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.interest)
                        </td>                       
                       
                        <td>
                            @Html.ActionLink("编辑", "Edit", new { id = item.user_id }) |
                            @Html.ActionLink("详细", "Details", new { id = item.user_id }) |
                            @Html.ActionLink("删除", "Delete", new { id = item.user_id })
                        </td>
                    </tr>
                }

            </table>
           
           
             <div class="row padding-10">
                <div class="col-sm-6">
                    <div class="dataTables_info">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="dataTables_paginate paging_bootstrap pull-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <div class="alert alert-error">@Html.ValidationSummary()</div>
            </div>
        </div>
    </div>
</div>