<html xmlns="http://www.w3.org/1999/xhtml">

<!-- Head -->
<head>
    <meta charset="utf-8" />
    <title>家庭理财信息管理系统</title>
    <meta http-equiv="Access-Control-Allow-Origin" content="*">

    <meta name="description" content="家庭理财信息管理系统" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">

    <!--Basic Styles-->
    <link href="~/Content/BeyondAdmin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="~/Content/BeyondAdmin/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/BeyondAdmin/assets/css/weather-icons.min.css" rel="stylesheet" />

    <!--Fonts-->
    <link href="http://fonts.useso.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300" 
          rel="stylesheet" type="text/css">
    <!--Beyond styles-->
    <!--link href="~/Content/BeyondAdmin/assets/css/beyond.min.css" rel="stylesheet" id="beyond-link" /-->
    <link href="~/Content/BeyondAdmin/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="~/Content/BeyondAdmin/assets/css/demo.min.css" rel="stylesheet" />
    <link href="~/Content/BeyondAdmin/assets/css/typicons.min.css" rel="stylesheet" />
    <link href="~/Content/BeyondAdmin/assets/css/animate.min.css" rel="stylesheet" />
