<!-- Body -->
<body>
    <!-- Loading Container -->
    <div class="loading-container">
        <div class="loading-progress">
            <div class="rotator">
                <div class="rotator">
                    <div class="rotator colored">
                        <div class="rotator">
                            <div class="rotator colored">
                                <div class="rotator colored"></div>
                                <div class="rotator"></div>
                            </div>
                            <div class="rotator colored"></div>
                        </div>
                        <div class="rotator"></div>
                    </div>
                    <div class="rotator"></div>
                </div>
                <div class="rotator"></div>
            </div>
            <div class="rotator"></div>
        </div>
    </div>
    <!--  /Loading Container -->
    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="navbar-container">
                <!-- Navbar Barnd -->
                <div class="navbar-header pull-left">
                    <a href="#" class="navbar-brand">
                        家庭理财系统
                    </a>
                </div>
                <!-- /Navbar Barnd -->
                <!-- Sidebar Collapse -->
                <div class="sidebar-collapse" id="sidebar-collapse">
                    <i class="collapse-icon fa fa-bars"></i>
                </div>
                <!-- /Sidebar Collapse -->
                <!-- Account Area and Settings --->
                <div class="navbar-header pull-right">
                    <div class="navbar-account">
                        <ul class="account-area">

                            <li>
                                @{
                                    var logs = ViewBag.LogList as List<bank_operate_log>;
                                    if(logs ==null)
                                    {
                                        logs = new List<bank_operate_log>();
                                    }
                                    var logCount = logs.Count();
                                }
                                <a class="wave in dropdown-toggle" data-toggle="dropdown" title="Help" href="#">
                                    <i class="icon fa fa-envelope"></i>
                                    <span class="badge">@logCount</span>
                                </a>                             
                                <!--Messages Dropdown-->
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-messages">
                                  @foreach (var item in logs)
                                  {  <li>
                                        <a href="#">
                                            <img src="~/Content/img/child-32.png" class="message-avatar" alt="Divyia Austin">
                                            <div class="message">                                               
                                                <span class="message-sender">
                                                    @item.user_name
                                                </span>
                                                <span class="message-sender">
                                                    @item.money.ToString("0.00")
                                                </span>
                                                <span class="message-time">
                                                    @item.create_date.Value.ToString("MM-dd hh:mm")
                                                </span>
                                                <span class="message-subject">
                                                    @item.subject_remark
                                                </span>
                                                <span class="message-body">
                                                    @item.remark
                                                </span>
                                            </div>
                                        </a>
                                    </li>
                                  }                                   
                                </ul>
                                <!--/Messages Dropdown-->
                            </li>
                            @{
                                sys_user user = ViewData["sys_user"] == null ? new sys_user() : (sys_user)ViewData["sys_user"];
                            }
                            <li>
                                <a class="login-area dropdown-toggle" data-toggle="dropdown">
                                    <div class="avatar" title="查看资料">
                                        <img src="~/Content/img/child-32.png">
                                    </div>
                                    <section>
                                        <h2><span class="profile"><span>@user.nick_name</span></span></h2>
                                    </section>
                                </a>
                                <!--Login Area Dropdown-->
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-login-area">
                                    <li class="username"><span>@user.nick_name</span></li>
                                    <li class="email"><a>@User.Identity.Name   (@user.family_name)</a></li>                                   
                                    <!--Avatar Area-->
                                    <li>
                                        <div class="avatar-area">
                                            <img src="~/Content/img/child-128.png" class="avatar">
                                            <span class="caption">修改头像</span>
                                        </div>
                                    </li>
                                    <!--Avatar Area-->
                                    <li class="edit">
                                        <a href="~/person/index" class="pull-left">资料</a>
                                        <a href="~/sys_user/detail/@user.user_id" class="pull-right">设置</a>
                                    </li>                                    
                                    <!--Theme Selector Area-->
                                    <li class="theme-area">
                                        <ul class="colorpicker" id="skin-changer">
                                            <li><a class="colorpick-btn" href="#" style="background-color:#5DB2FF;" rel="~/Content/BeyondAdmin/assets/css/skins/blue.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#2dc3e8;" rel="~/Content/BeyondAdmin/assets/css/skins/azure.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#03B3B2;" rel="~/Content/BeyondAdmin/assets/css/skins/teal.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#53a93f;" rel="~/Content/BeyondAdmin/assets/css/skins/green.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#FF8F32;" rel="~/Content/BeyondAdmin/assets/css/skins/orange.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#cc324b;" rel="~/Content/BeyondAdmin/assets/css/skins/pink.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#AC193D;" rel="~/Content/BeyondAdmin/assets/css/skins/darkred.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#8C0095;" rel="~/Content/BeyondAdmin/assets/css/skins/purple.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#0072C6;" rel="~/Content/BeyondAdmin/assets/css/skins/darkblue.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#585858;" rel="~/Content/BeyondAdmin/assets/css/skins/gray.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#474544;" rel="~/Content/BeyondAdmin/assets/css/skins/black.min.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color:#001940;" rel="~/Content/BeyondAdmin/assets/css/skins/deepblue.min.css"></a></li>
                                        </ul>
                                    </li>
                                    <!--/Theme Selector Area-->
                                    <li class="dropdown-footer">
                                        @Html.ActionLink("登出", "Logout", "Member")
                                        @*<a href="~\Member\Logout">
                                            登出
                                        </a>*@
                                    </li>
                                </ul>
                                <!--/Login Area Dropdown-->
                            </li>

                            <!-- /Account Area -->
                            <!--Note: notice that setting div must start right after account area list.
                            no space must be between these elements-->
                            <!-- Settings -->
                        </ul>
                        <div class="setting">
                            <a id="btn-setting" title="Setting" href="#">
                                <i class="icon glyphicon glyphicon-cog"></i>
                            </a>
                        </div>
                        <div class="setting-container">
                            <label>
                                <input type="checkbox" id="checkbox_fixednavbar">
                                <span class="text">固定导航栏</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedsidebar">
                                <span class="text">固定侧边栏</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedbreadcrumbs">
                                <span class="text">固定路径栏</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedheader">
                                <span class="text">固定页标题</span>
                            </label>
                        </div>
                        <!-- Settings -->
                    </div>
                </div>
                <!-- /Account Area and Settings -->
            </div>
        </div>
    </div>
    <!-- /Navbar -->
    <!-- Main Container -->
    <div class="main-container container-fluid">
        <!-- Page Container -->
        <div class="page-container">
            <!-- Page Sidebar -->
            <div class="page-sidebar" id="sidebar">
                <!-- Page Sidebar Header-->
                <div class="sidebar-header-wrapper">
                    <input type="text" class="searchinput" id="searchbtn" />
                    <i class="searchicon fa fa-search"></i>
                    <div class="searchhelper">查找</div>
                </div>
                <!-- /Page Sidebar Header -->
                <!-- Sidebar Menu -->
                <ul class="nav sidebar-menu" id="navmenu">
                    <!--Dashboard-->
                    <li id="menu1">
                        <a href="#" class="menu-dropdown">
                            <i class="menu-icon glyphicon glyphicon-usd"></i>
                            <span class="menu-text"> 理财 </span>
                            <i class="menu-expand"></i>
                        </a>
                        <ul class="submenu">
                            <li id="menu11">
                                <a href="~/home/index">
                                    <i class="menu-icon glyphicon glyphicon-home"></i>
                                    <span class="menu-text">我的家庭</span>
                                </a>
                            </li>
                            <li id="menu12">
                                <a href="~/person/Index">
                                    <i class="menu-icon glyphicon glyphicon-user"></i>
                                    <span class="menu-text">我的账户</span>
                                </a>                                
                            </li>
                            <li id="menu13">
                                <a href="~/Record/Index">
                                    <i class="menu-icon fa fa-pencil-square-o"></i>
                                    <span class="menu-text">记账</span>
                                </a>
                            </li>
                            <li id="menu14">
                                <a href="~/Invest/Index">
                                    <i class="menu-icon glyphicon glyphicon-stats"></i>
                                    <span class="menu-text">投资理财</span>
                                </a>
                            </li>
                            <li id="menu15">
                                <a href="~/Report/Index">
                                    <i class="menu-icon fa fa-bar-chart-o"></i>
                                    <span class="menu-text">财务报表</span>
                                </a>
                            </li>
                            <li id="menu16">
                                <a href="~/Comm/Index">
                                    <i class="menu-icon glyphicon glyphicon-wrench"></i>
                                    <span class="menu-text">理财工具</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!--Main 1-->
                    <li id="menu2">
                        <a href="~/home/index" class="menu-dropdown">
                            <i class="menu-icon glyphicon glyphicon-th-large"></i>
                            <span class="menu-text"> 管理 </span>
                            <i class="menu-expand"></i>
                        </a>
                        <ul class="submenu">
                            <li id="menu21">
                                <a href="~/bank_family/index">
                                    <i class="menu-icon typcn typcn-group"></i>
                                    <span class="menu-text">家庭管理</span>
                                </a>
                            </li>
                            <li id="menu22">
                                <a href="~/sys_user/index">
                                    <i class="menu-icon typcn typcn-business-card"></i>
                                    <span class="menu-text">成员管理</span>
                                </a>
                            </li>
                            <li id="menu23">
                                <a href="~/bank_account/index">
                                    <i class="menu-icon typcn typcn-contacts"></i>
                                    <span class="menu-text">资金账户</span>
                                </a>
                            </li>
                            <li id="menu24">
                                <a href="~/bank_operate_log/index">
                                    <i class="menu-icon typcn typcn-clipboard"></i>
                                    <span class="menu-text">资金流水</span>
                                </a>
                            </li>
                            <li id="menu25">
                                <a href="~/sys_role/index">
                                    <i class="menu-icon glyphicon glyphicon-eye-open"></i>
                                    <span class="menu-text">角色管理</span>
                                </a>
                            </li>
                            <li id="menu26">
                                <a href="~/sys_permission/index">
                                    <i class="menu-icon glyphicon glyphicon-saved"></i>
                                    <span class="menu-text">权限管理</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--Main 2-->
                    <li id="menu3">
                        <a href="~/home/index" class="menu-dropdown">
                            <i class="menu-icon glyphicon glyphicon-cog"></i>
                            <span class="menu-text"> 设置 </span>
                            <i class="menu-expand"></i>
                        </a>
                        <ul class="submenu">
                            <li id="menu31">
                                <a href="~/sys_subject/index">
                                    <i class="menu-icon glyphicon glyphicon-list-alt"></i>
                                    <span class="menu-text">财务科目</span>
                                </a>
                            </li>
                            <li id="menu32">
                                <a href="~/sys_log/index">
                                    <i class="menu-icon glyphicon glyphicon-tags"></i>
                                    <span class="menu-text">系统日志</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
                <!-- /Sidebar Menu -->
            </div>
            <!-- /Page Sidebar -->
            <!-- Page Content -->
            <div class="page-content">
                <!-- Page Breadcrumb -->
                <div class="page-breadcrumbs">
                    <ul class="breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            @Html.ActionLink("主页", "Index", "Home")
                        </li>
                        @if (ViewData["NavList"] != null)
                        {
                            foreach (var item in (ViewData["NavList"] as List<BreadCrumbs>))
                            {
                            <li>
                                @Html.ActionLink(item.Text, item.Action, item.Controll)
                            </li>
                            }
                        }
                    </ul>
                </div>
                @*@Html.ActionLink("管理系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

                <!-- /Page Breadcrumb -->
                <!-- Page Header -->
                <div class="page-header position-relative">
                    <div class="header-title">
                        <h1>
                            @ViewBag.Title
                        </h1>
                    </div>
                    <!--Header Buttons-->
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#">
                            <i class="fa fa-arrows-h"></i>
                        </a>
                        <a class="refresh" id="refresh-toggler" href="">
                            <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                        <a class="fullscreen" id="fullscreen-toggler" href="#">
                            <i class="glyphicon glyphicon-fullscreen"></i>
                        </a>
                    </div>
                    <!--Header Buttons End-->
                </div>
                <!-- /Page Header -->
                <!-- Page Body -->
                <div class="page-body">
                    <!-- Your Content Goes Here -->
                    @RenderBody()
                </div>
                <!-- /Page Body -->
            </div>
            <!-- /Page Content -->
        </div>
        <!-- /Page Container -->
        <!-- Main Container -->
    </div>

    <!--Basic Scripts-->
    <script src="~/Content/BeyondAdmin/assets/js/jquery-2.0.3.min.js"></script>
    <script src="~/Content/BeyondAdmin/assets/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js.cookie.js"></script>
    <!--Beyond Scripts-->
    <script src="~/Content/BeyondAdmin/assets/js/beyond.min.js"></script>
    <script src="~/Scripts/SimpleCalculadorajQuery.js" type="text/javascript"></script>
    <script type="text/javascript">
        /**初始化**/
        $(document).ready(function () {
            var id = Cookies.get('menuid');
            var subid = Cookies.get('menusubid');
            if (typeof (id) == "undefined") {
                id = "menu1";
            }
            if (typeof (subid) == "undefined") {
                subid = "menu11";
            }
            $("#" + id).addClass("open");
            $("#" + subid).addClass("active");
            //$("#searchbtn").val(id + "," + subid);
        });

        $("#navmenu li ul li a").click( // 当二级菜单被单击时
            function () {
                var id = $("#navmenu li.open").attr("id");
                Cookies.set('menuid', id);
                Cookies.set('menusubid', this.parentElement.id); 
                //$("#searchbtn").val(id + "|" + this.parentElement.id);
            }
        );
    </script>
    <!--Page Related Scripts-->
    @RenderSection("scripts", required: false)
</body>
<!--  /Body -->
</html>
