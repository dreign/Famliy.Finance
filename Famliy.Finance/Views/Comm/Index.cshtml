@{
    ViewBag.Title = "计算器";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/SimpleCalculadorajQuery.css" rel="stylesheet" />

<div class="tabbable">
    <ul class="nav nav-tabs nav-justified" id="myTab5">
        <li class="active">
            <a data-toggle="tab" href="#calc">
                计算器
            </a>
        </li>
        <li class="tab-red">
            <a data-toggle="tab" href="#shouyi">
                收益计算器
            </a>
        </li>
        <li class="tab-green">
            <a data-toggle="tab" href="#fangdai">
                房贷计算器
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="calc" class="tab-pane active">
            <!-- 计算器 begin-->
            <div class="row">
                <div class="col-xs-4 col-md-offset-4">
                    <div id="mycalc">
                    </div>
                </div>
            </div>
            <!-- 计算器 end-->
        </div>
        <div id="shouyi" class="tab-pane">
            <!-- 计算器 begin-->
            <div class="row">
                <div class="col-xs-4 col-md-offset-2">
                    <div class="well">
                    <div class="form-title">
                        <span>计算公式</span>
                    </div>
                    <div class="form-group">
                        <span>计算</span>
                        <div class="input-group">
                            <select onChange="ChgItem(this.value)">
                                <option value='c1'>投资收益</option>
                                @*<option value='c0'>投资收益率</option>
                                <option value='c2'>投资年限</option>*@
                            </select>
                        </div>
                    </div>  
                        <div class="form-group">
                            <span>初始投资金额</span>                            
                            <div class="input-group">
                                <input type="text" class="form-control" id="sytotal" value="10000" />
                                <span class="input-group-addon">元</span>
                            </div>    
                        </div>  
                        <div class="form-group">
                            <span>投资年限</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="syyear" value="1" />
                                <span class="input-group-addon">年</span>
                            </div>
                        </div>  
                        <div class="form-group">
                            <span>年化收益率</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="syrate" value="5" />
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>  
                        <div class="form-group">
                            <input type="button" id="shouyiBtn" value="计算" class="btn btn-primary btn-lg" />
                        </div> 
                        </div>
                    </div>
                <div class="col-lg-4 col-sm-4 col-xs-12">
                    <div class="well">
                        <div class="form-title">
                            <span>计算结果</span>
                        </div>
                        <div class="well bordered-top bordered-bottom bordered-red">
                            <div class="form-group">
                                <span>投资收益</span>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="syvalue" />
                                    <span class="input-group-addon">元</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <span>本金与收益合计</span>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="symoney" />
                                    <span class="input-group-addon">元</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
            <!-- 计算器 end-->
        </div>
        <div id="fangdai" class="tab-pane">
            <!-- 房贷计算器 begin-->
            <div id="divTitle1" class="well">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-xs-12">
                        <div class="form-title">
                            <span>商业部分</span>
                        </div>
                        <div class="form-group">
                            <span>贷款额度</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMoney1" value="500000" />
                                <span class="input-group-addon">元</span>
                            </div>                            
                        </div>                     
                        <div class="form-group">
                            <span>贷款期限</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMonth1" value="120" />
                                <span class="input-group-addon">月</span>
                            </div>
                        </div> 
                        <div class="form-group">
                            <span>年利率</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtAPR1" value="5.15" />
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>           
                    </div>
                    <div class="col-lg-4 col-sm-4 col-xs-12">
                        <div class="form-title">
                            <span>公积金部分</span>                           
                        </div>
                        <div class="form-group">
                            <span>贷款额度</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMoney2" value="500000" />
                                <span class="input-group-addon">元</span>
                             </div>
                        </div>
                        <div class="form-group">
                            <span>贷款期限</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMonth2" value="120" />
                                <span class="input-group-addon">月</span>
                            </div>
                        </div> 
                        <div class="form-group">
                            <span>年利率</span>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtAPR2" value="3.25" />
                                <span class="input-group-addon">%</span>
                            </div>
                        </div>                        
                    </div>
                    <div class="col-lg-4 col-sm-4 col-xs-12">
                        <div class="form-title">
                            <span>还款方式</span>
                        </div>
                        <div class="form-group">
                            <span>贷款额度</span>
                            <div class="input-group">
                                <select id="txtType1">
                                    <option value="1">等额本息</option>
                                    <option value="2">等额本金</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <span> </span>                           
                        </div>   
                        <div class="form-group">
                            <input type="button" id="btnCompute" value="计算" class="btn btn-primary btn-lg" />
                        </div>                                           
                    </div>
                </div>
                <div> </div>

                <div id="divMain" style="display:none" class="well bordered-top bordered-bottom bordered-green"></div>
                <!-- 房贷计算器 end-->
            </div>
        </div>
    </div>
</div>
    @section scripts{
        <script src="@Url.Content("~/Scripts/SimpleCalculadorajQuery.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $("#mycalc").Calculadora({ 'EtiquetaBorrar': 'Clear' });
            var compute = new Compute();
            $(function () {
                $("#shouyiBtn").click(function () {                  
                    var a = parseFloat($("#sytotal").val());
                    var b = parseFloat($("#syyear").val());
                    var c = parseFloat($("#syrate").val());
                    var i = c / 100;

                    var d = Math.pow((1 + i), b) * a;
                    $("#symoney").val(d);
                    $("#syvalue").val(d - a);
                });
            });
        </script>
    }
